{
    "name": "jmfontaine/http-comparator",
    "description": "PHP library to compare HTTP requests and responses",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/jmfontaine/http-comparator",
    "authors": [
        {
            "name": "Jean-Marc Fontaine",
            "email": "jm@jmfontaine.net",
            "homepage": "http://jmfontaine.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=5.3.0",
        "guzzle/http": "~3.8"
    },
    "require-dev": {
        "guzzle/plugin-history": "~3.8",
        "phpunit/phpunit": "~4.0",
        "satooshi/php-coveralls": "~0.6",

        "kriswallsmith/buzz": "v0.10",
        "zendframework/zend-http": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "HttpComparator\\": "src/",
            "HttpComparator\\Tests\\": "tests/"
        }
    },
    "support": {
        "issues": "https://github.com/jmfontaine/http-comparator/issues"
    },
    "minimum-stability": "stable"
}
